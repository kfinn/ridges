<% const cgi_escape = @import("mantle").cgi_escape; %>
<% const view_helpers = @import("app").view_helpers; %>

<div class="flex items-baseline space-x-2">
  <% try view_helpers.writeH2(writer, "Current User"); %>
  <% try view_helpers.writeLinkTo(writer, "Edit", "/current_user/edit"); %>
</div>

<dl>
  <dt>Name</dt>
  <dd><% try cgi_escape.writeEscapedHtml(writer, props.user.name); %></dd>

  <dt>Email</dt>
  <dd><% try cgi_escape.writeEscapedHtml(writer, props.user.email); %></dd>
</dl>

